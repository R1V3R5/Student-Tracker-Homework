= render 'assignments/navbar'
.container
  .row
    .col-md-8
      %strong
        %h3
          = "#{@location.name}"
        %h6  
          = @course.name
          = '|'  
          = link_to "Add Assignment", new_location_course_assignment_path(@location, @course, @assignment) if can? :create, Assignment
    .col-md-4
    %a#openStBtn.btn.btn-success Students
    #studentModal.modal.fade{:role => "dialog", :tabindex => "-1"}
      .modal-header 
        %p.text-center Current Students
      .modal-body
        %p.text-center
          - @course.users.each do |user|
            = user.name
            %br
      .modal-footer
        %button.btn{"data-dismiss" => "modal"} Close
%hr  
- @course.assignments.each do |assignment|
  = render 'assignments/assignments', assignment: assignment

